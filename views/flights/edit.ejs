<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/edit.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights/<%= flight._id %>?_method=PUT" method="POST">
    <label for="airports-input">Airport:</label>
    <input type="text" name="airport" value="<%= flight.airport %>">
    <label for="airline-input">Airline:</label>
    <input type="text" name="airline" id="airline-input" value="<%= flight.airline %>">
    <label for="departs-input">Departs:</label>
    <input type="datetime-local" name="departs" value="<%= flight.departs %>" id="departs-input">
    <button type="submit">Save Flight</button>
  </form>
</main>

<%- include("../partials/footer") %>